@{
    ViewData["Title"] = "Input Movie";
}
@model MovieInput
<div class="text-center">
    <h3>Input Movie Information</h3>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="MovieID"/>
        <br />
        <label asp-for="Title">Movie Title:</label>
        <input asp-for="Title" id="title" type="text" /><br /><br />
        <label asp-for="CategoryID">Category:</label>
        <select asp-for="CategoryID" id="category">
            <option>Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br /><br />
        <label asp-for="Year">Year:</label>
        <input type="number" asp-for="Year" /><br /><br />
        <label asp-for="Director">Director:</label>
        <input type="text" asp-for="Director" /><br /><br />
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <label asp-for="Edited">&nbsp;&nbsp;Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br /><br />
        <label asp-for="LentTo">Lent To:</label>
        <input type="text" asp-for="LentTo" /><br /><br />
        <label asp-for="Notes">Notes:</label>
        <textarea asp-for="Notes"></textarea><br /><br />
        <button type="submit">Submit Movie</button>
    </form>
</div>